<div class="show-page col-md-10 col-md-offset-1">
  <div class="animation-h1">
    <h1 class="ternow-h1"><%= @post.title %></h1>
    <div class="background-size">
    </div>
    <div class="background-size-4">
    </div>
    <div class="background-size-2">
    </div>
    <div class="background-size-3">
    </div>
  </div>
  <p class="post-text">
    <%= (@post.body).html_safe %>
  </p>
  <div class="show__time-links">
    <p>Posted at: <%= @post.created_at %> <br> </p>
    <p>Edited at: <%= @post.updated_at %></p>
  </div>
  <div class="show-links">
    <% if user_signed_in? %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <% end %>
    <%= link_to 'Back', posts_path %>
  </div>

  <h3> Join Discussion: </h3>
 <div id="disqus_thread"></div>

</div>
