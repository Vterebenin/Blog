

<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <p>
   
    <%= f.input :name, input_html: { class: 'form-control' } %>
  </p>
  
  <p>

    <%= f.input :body, input_html: { class: 'form-control' } %>
  </p>
  <br>
  <p>
    <%= f.button :submit, "Send", class: 'btn-info' %>
  </p>
<% end %>
