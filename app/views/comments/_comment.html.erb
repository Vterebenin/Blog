<div class="comment clearfix">
	<div class="comment_content">
		<p class="comment_name"><em><%= comment.name %></em></p>
		<p class="comment_body"><%= comment.body %></p>
		<p class="comment_title"><%= time_ago_in_words(comment.created_at) %> Ago</p>
	</div>


	<p><%= link_to 'edit', edit_post_comment_url(@post, comment), class: "button" %></p>
		<p><%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button" %></p>

</div>